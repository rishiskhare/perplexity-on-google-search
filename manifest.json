{
  "manifest_version": 3,
  "name": "Perplexity on Google Search",
  "version": "1.3.4",
  "description": "Skip Google's AI Overviewsâ€”get high-quality answers from Perplexity every time you search on Google or watch a YouTube video!",
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/search*",
        "https://google.com/search*",
        "https://*.duckduckgo.com/*",
        "https://duckduckgo.com/*",
        "https://search.brave.com/*",
        "https://*.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["defaults.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/logo.svg", "assets/FKGrotesk-Regular.ttf", "assets/icons/*.svg", "popup.html", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://perplexity.ai/*",
    "https://*.perplexity.ai/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "perplexity_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Toggle Perplexity sidebar"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  }
}